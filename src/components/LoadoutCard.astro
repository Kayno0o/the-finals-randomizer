---
import type { LoadoutType } from '../types'
import data from '../assets/data.json'

interface Props {
  loadout: LoadoutType
}

const { loadout } = Astro.props

const classData = data[loadout.class]
---

<div class="card">
  <h3 class="text-2xl font-bold">{loadout.playerName}</h3>
  <h4 class="text-xl">{classData.name}</h4>
  <p><span class="font-bold">Specialization:</span><br>{classData.specializations[loadout.specialization]}</p>
  <p><span class="font-bold">Weapon:</span><br>{classData.weapons[loadout.weapon]}</p>
  <p><span class="font-bold">Gadgets:</span><br>{loadout.gadgets.map(gadgetIndex => classData.gadgets[gadgetIndex]).join(', ')}</p>
</div>
